# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /content                        controllers.Application.getContent
GET     /database/:database             controllers.Application.database(database: String)
GET     /changeHost/:dbHost/:dbPort     controllers.Application.changeHost(dbHost: String, dbPort: Integer)

POST    /query                          controllers.Application.query

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
